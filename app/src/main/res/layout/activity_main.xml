<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="#FBFCFC"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:shadowColor="#000000"
        android:text="CALCULATE YOUR"
        android:textColor="@color/newColor"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="AGE"
        android:background="@color/ageTextbackGroundColor"
        android:textColor="@color/ageTextColor"
        android:textSize="22sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:shadowColor="#000000"
        android:text="IN MINUTES"
        android:textColor="@color/newColor"
        android:textSize="22sp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date"
        android:textColor="@color/ButtonTextColor"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:layout_marginTop="15dp"
        android:textSize="18sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/SelectedDateColor"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Selected Date"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="100dp"
        android:textColor="@color/SelectedDateColor"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Age in minutes"
        />



</LinearLayout>